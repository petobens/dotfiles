set verify off
set pagesize 50000

 -- Show database name in prompt
SET termout OFF
define gname = idle
COLUMN global_name new_value gname
SELECT lower(USER) || '@' || substr(global_name,1,decode(dot,0,length(global_name),dot-1)) global_name
FROM
  (SELECT global_name,
          instr(global_name,'.') dot
   FROM global_name
  );
SET sqlprompt '&gname> '

SET termout ON
SET feedback ON
