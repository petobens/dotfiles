[module/pulseaudio]
type = internal/pulseaudio
; Max vol might go beyond 100% (but it is amplified and hence distorted). We
; show the normalized (100%) version
use-ui-max = false
format-volume = %{A1:pavucontrol &:}<label-volume> <bar-volume>%{A}
format-muted = %{A1:pavucontrol &:}<label-muted>%{A}
label-volume = 奄
label-muted = 
